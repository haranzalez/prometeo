<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.net>
        <mailSettings>
            <smtp>
                <network host="localhost" />
            </smtp>
        </mailSettings>
    </system.net>
    <system.webServer>
        <security>
            <requestFiltering>
                <requestLimits>
                    <headerLimits>
                        <add header="Content-type" sizeLimit="10000" />
                    </headerLimits>
                </requestLimits>
            </requestFiltering>
        </security>
    </system.webServer>
</configuration>
